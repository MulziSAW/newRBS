<Window x:Class="newRBS.Views.Utils.ProjectSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:newRBS.Views.Utils"
        mc:Ignorable="d"
        Title="ProjectSelector" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ComboBox x:Name="cBox" DisplayMemberPath="ProjectName" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="5">_Ok</Button>
                <Button IsCancel="True" MinWidth="60" Margin="5">_Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
