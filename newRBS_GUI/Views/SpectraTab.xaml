<UserControl x:Class="newRBS.GUI.Spectra"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:oxy="http://oxyplot.org/wpf">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <oxy:PlotView>
            <oxy:PlotView.Series>
                <oxy:LineSeries ItemsSource="{Binding Points}" Title="{Binding myString}"/>
            </oxy:PlotView.Series>
        </oxy:PlotView>

        <DataGrid x:Name="SpectraDataGrid" Grid.Row="1" ItemsSource="{Binding measurementList}"/>

        <GridSplitter Height="7" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Top" ResizeDirection="Rows" ShowsPreview="False" Grid.Row="1"/>
    </Grid>
</UserControl>
